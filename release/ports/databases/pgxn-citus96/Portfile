distname            ${version}
worksrcdir          citus-${short_version}
github.tarball_from releases

checksums           rmd160  a6aaf676f3cf16803464580d6b7649ee9c880457 \
                    sha256  642c194ad229a30f9e960a78d4400566fc08dec3fce1694990592d964d26bf3d

